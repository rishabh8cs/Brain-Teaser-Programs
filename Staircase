import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
      Scanner s=new Scanner(System.in);
        int n=s.nextInt();
     for(int x=1;x<=n;x++){   
        for(int i=x;i<n;i++)
          System.out.print(" ");
        for(int j=0;j<x;j++)
          System.out.print("#");
         System.out.println();
        
    }  
    }
}
